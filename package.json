{
  "name": "vibroboros",
  "displayName": "Vibroboros",
  "description": "An A2A-based multi-agent AI coding partner.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:vibroboros.mainView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibroboros.generateDocumentation",
        "title": "Vibroboros: Generate Documentation"
      },
      {
        "command": "vibroboros.getRefactoringSuggestions",
        "title": "Vibroboros: Get Refactoring Suggestions"
      },
      {
        "command": "vibroboros.summarizeCode",
        "title": "Vibroboros: Summarize Code"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vibroboros-sidebar",
          "title": "Vibroboros",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "vibroboros-sidebar": [
        {
          "id": "vibroboros.mainView",
          "name": "AI Partner"
        }
      ]
    },
    "configuration": {
      "title": "Vibroboros",
      "properties": {
        "vibroboros.llm.apiKeys": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "description": "Your OpenAI-compatible API keys. The system will rotate keys on QuotaLimit errors.",
          "scope": "application"
        },
        "vibroboros.agent.docGen.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "The language model to use for the Documentation Generation Agent.",
          "scope": "resource"
        },
        "vibroboros.agent.docGen.requestTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Timeout in milliseconds for requests to the DocGen Agent.",
          "scope": "resource"
        },
        "vibroboros.agent.refactoring.model": {
          "type": "string",
          "default": "gpt-4",
          "description": "The language model to use for the Refactoring Suggestion Agent.",
          "scope": "resource"
        },
        "vibroboros.agent.refactoring.requestTimeout": {
          "type": "number",
          "default": 90000,
          "description": "Timeout in milliseconds for requests to the Refactoring Agent.",
          "scope": "resource"
        },
        "vibroboros.agent.codeAnalysis.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "The language model to use for the Code Analysis Agent.",
          "scope": "resource"
        },
        "vibroboros.agent.codeAnalysis.requestTimeout": {
          "type": "number",
          "default": 45000,
          "description": "Timeout in milliseconds for requests to the Code Analysis Agent.",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "lint": "eslint src"
  },
  "dependencies": {
    "express": "^4.21.1",
    "ts-node": "^10.9.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}
